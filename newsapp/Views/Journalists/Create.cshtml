@model newsapp.Models.Journalist

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="ui grid">
    <div class="eight wide column">
        @using (Html.BeginForm("Create", "Journalists", FormMethod.Post, new { @class = "ui form" }))
        {
            @Html.AntiForgeryToken()

            <h4 class="ui dividing header">Journalist</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="field">
                @Html.Label("FirstName", "Name")
                <div class="two fields">
                    <div class="field">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new {  placeholder="First Name"} })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { placeholder = "Last Name" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="field">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                @Html.LabelFor(model => model.Image)
                @Html.EditorFor(model => model.Image)
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>

            <div class="field">
                <input type="submit" value="Create" class="ui green button" />
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>
