@using newsapp.Models
@model Article

<div class="ui special cards">
    <div class="card">
        <div class="blurring dimmable small image">
            <div class="ui dimmer">
                <div class="content">
                    <div class="center">
                        <h3 class="ui green header">
                            @Model.Header
                        </h3>
                        <div class="ui green small button">Take me there...</div>
                    </div>
                </div>
            </div>
            <img src="@Model.Image">
        </div>
        <div class="extra content">
            <div class="meta">
                <span class="date">
                    <i class="circular calendar icon"></i>
                    @Model.PostedOn.ToShortDateString()
                </span>
            </div>
        </div>
    </div>
</div>